{
  "manifest_version": 3,
  "name": "Keyboard Layout Detector",
  "version": "3.1.0",
  "description": "Fix Arabic/English keyboard layout mistakes with smart detection",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["fa-layout.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Keyboard Layout Detector"
  }
}
